<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="3.0"
	xmlns="https://jakarta.ee/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence/orm https://jakarta.ee/xml/ns/persistence/orm/orm_3_0.xsd">
	<named-native-query name="ecm_category.listAll"
		result-set-mapping="tbl_ecm_category.Category">
		<query>select * from tbl_ecm_category</query>
	</named-native-query>
	<sql-result-set-mapping
		name="tbl_ecm_category.Category">
		<entity-result
			entity-class="com.algaworks.ecommerce.model.Category">
			<field-result name="id" column="cat_id" />
			<field-result name="name" column="cat_name" />
			<field-result name="parentCategory"
				column="cat_parent_category_id" />
		</entity-result>
	</sql-result-set-mapping>
</entity-mappings>